{
  "compilerOptions": {
     "lib": [
        "es6"
     ],
     "target": "es6",
     "module": "commonjs",
     "moduleResolution": "node",
     "resolveJsonModule": true,
     "emitDecoratorMetadata": true,
     "esModuleInterop": true,
     "experimentalDecorators": true,
     "sourceMap": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}