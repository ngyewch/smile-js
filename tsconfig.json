{
  "compilerOptions": {
    "target": "es2017",
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ]
  },
  "include": [
    "package.json",
    "vite.config.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "test/**/*.d.ts",
    "test/**/*.ts",
    "test/**/*.js"
  ]
}
